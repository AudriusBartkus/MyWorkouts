<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.audrius.myworkouts.myworkouts" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.mainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.newWorkoutActivity"
            android:label="@string/title_activity_new_workout"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.addExerciseActivity"
            android:label="@string/title_activity_add_exercise"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".activities.selectWorkoutActivity"
            android:label="@string/title_activity_start_workout"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.startWorkoutActivity"
            android:label="@string/title_activity_start_workout"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.editSetActivity"
            android:label="@string/title_activity_edit_set"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".activities.statisticsActivity"
            android:label="@string/title_activity_statistics" >
        </activity>
        <activity
            android:name=".activities.workoutStatisticsActivity"
            android:label="@string/title_activity_workout_statistics" >
        </activity>
    </application>

</manifest>
