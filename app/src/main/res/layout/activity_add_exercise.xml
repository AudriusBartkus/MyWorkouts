<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    tools:context="com.audrius.myworkouts.myworkouts.addExerciseActivity"
    android:windowSoftInputMode="stateHidden"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/name"
        android:textSize="20sp"
        android:id="@+id/timeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameInput"
        android:layout_toEndOf="@+id/timeText"
        android:layout_toRightOf="@+id/timeText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:inputType="text" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/save_exercise"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:onClick="save"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:text="@string/weight"
        android:id="@+id/weight"
        android:layout_below="@+id/nameInput"
        android:layout_alignLeft="@+id/timeText"
        android:layout_alignStart="@+id/timeText"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weightInput"
        android:layout_below="@+id/nameInput"
        android:layout_alignLeft="@+id/save_exercise"
        android:layout_alignStart="@+id/save_exercise" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:text="@string/sets"
        android:id="@+id/sets"
        android:layout_below="@+id/weight"
        android:layout_alignLeft="@+id/weight"
        android:layout_alignStart="@+id/weight"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/setsInput"
        android:layout_above="@+id/repsInput"
        android:layout_alignLeft="@+id/weightInput"
        android:layout_alignStart="@+id/weightInput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:text="@string/reps"
        android:id="@+id/reps"
        android:layout_below="@+id/sets"
        android:layout_alignLeft="@+id/sets"
        android:layout_alignStart="@+id/sets" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/repsInput"
        android:layout_alignTop="@+id/reps"
        android:layout_alignLeft="@+id/setsInput"
        android:layout_alignStart="@+id/setsInput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_unit"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_toEndOf="@+id/weightInput"
        android:layout_alignTop="@+id/weightInput"
        android:layout_toRightOf="@+id/weightInput" />

</RelativeLayout>
