<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="customButton">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="window" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:textColor">#3f51b5</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:windowTitleStyle">@style/titleBackground</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="titleBackground">
        <item name="android:background">#303f9f</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>

</resources>
